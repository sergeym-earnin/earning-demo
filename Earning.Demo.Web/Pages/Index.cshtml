@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row" id="Content" data-url="@Model.Configuration.ApiUrl">
    @foreach (var application in Model.Applications)
    {
        <div class="col-md-3 app-type">
            <h1>@application.Key</h1>
            <ul>
                @foreach (var item in application)
                {
                    <li class="app">
                        <h3>Application: @item.ApplicationId</h3>
                        <h3>Node: @item.NodeName</h3>
                        @if (item.Data != null)
                        {
                            <h3>Data: @item.Data</h3>
                        }
                    </li>
                }
            </ul>
        </div>
    }
</div>